<section class="inner-hero-section">
    {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt}}">
    {% else %}
    {% assign placeholder = 'lifestyle-2' %}
    {{ placeholder | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}

    <div class="container py-5">
        <div class="mx-auto max-w-lg">
            <h1 class="text-4xl">{{ section.settings.title }}</h1>
            <p class="text-lg">{{ section.settings.description }}</p>
            <a href="{{ section.settings.button_link }}"
                class="bg-gray-800 text-white py-2 px-4 rounded-lg inline-block mt-4">{{ section.settings.button_label
                }}</a>
        </div>
    </div>
</section>

{% schema %}
{
"name": "Hero",
"class": "hero-section",
"settings": [
{
"type": "image_picker",
"id": "image",
"label": "Heading Background Title"
},
{
"type": "text",
"id": "title",
"default": "Example Heading",
"label": "Heading Title"
},
{
"type": "richtext",
"id": "description",
"default": "<p>Example Paragraph</p>",
"label": "Heading Description"
},
{
"type": "text",
"id": "button_label",
"default": "Button",
"label": "Heading Button Label"
}, {
"type": "url",
"id": "button_link",
"label": "Heading Button Link"
}
],
"presets": [
{
"category": "Hero",
"name": "Simple Hero"
}
]
}
{% endschema %}